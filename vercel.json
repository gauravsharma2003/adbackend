{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      { "source": "/game/:game/:theme", "destination": "/game/:game/:theme.json" },
      { "source": "/:game/:theme", "destination": "/game/:game/:theme.json" },
      { "source": "/:path*", "destination": "/index.js" }
    ],
    "headers": [
      { "source": "/game/:path*.json", "headers": [ { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=86400, stale-while-revalidate=600" } ] }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  } 